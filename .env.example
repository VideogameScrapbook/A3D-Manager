# Read label artwork directly from SD card instead of local labels.db
# This is very slow, but keeping here for test purposes.
# Useful for testing SD card read performance during browsing.
READ_LABELS_FROM_SD=false

# File transfer settings for SD card writes
# Based on chunk benchmark results, 2MB with fsync is the fastest option
# that still provides accurate progress tracking (~784 KB/s)
# Chunk size in bytes (default: 2097152 = 2MB)
TRANSFER_CHUNK_SIZE=2097152
# Whether to fsync after each chunk (default: true for accurate progress)
# Set to false for ~5% faster transfers but progress bar won't reflect actual disk writes
TRANSFER_FSYNC_PER_CHUNK=true
